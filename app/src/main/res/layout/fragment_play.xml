<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arnarfreyr.dicegame3000.Play">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnRoll"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/btn_roll"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.965" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tlImages"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <TableRow
                android:layout_width="1dp"
                android:layout_height="495dp"
                android:weightSum="100"
                android:layout_marginBottom="10dp"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="50"
                    android:clickable="true"
                    app:srcCompat="@drawable/white1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="50"
                    android:clickable="true"
                    app:srcCompat="@drawable/white2" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="73dp"
                android:layout_marginBottom="10dp"
                tools:layout_editor_absoluteY="89dp"
                tools:layout_editor_absoluteX="8dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="50"
                    android:clickable="true"
                    app:srcCompat="@drawable/white3" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="50"
                    android:clickable="true"
                    app:srcCompat="@drawable/white4" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="495dp"
                tools:layout_editor_absoluteY="89dp"
                tools:layout_editor_absoluteX="8dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="50"
                    android:clickable="true"
                    app:srcCompat="@drawable/white5" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="50"
                    android:clickable="true"
                    app:srcCompat="@drawable/white6" />
            </TableRow>

        </TableLayout>

        <SeekBar
            android:id="@+id/sbBet"
            android:layout_width="177dp"
            android:layout_height="47dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnRoll"
            app:layout_constraintTop_toBottomOf="@+id/tlImages"
            app:layout_constraintVertical_bias="0.949"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorAccent"
            android:elevation="0dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/txt_score"
            android:textAlignment="textEnd"
            android:textColor="?attr/colorControlNormal"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tlImages"
            tools:layout_editor_absoluteX="-1dp" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
